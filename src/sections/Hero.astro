---
import HeaderBar from "@components/HeaderBar.astro";

import { Content, frontmatter } from "@content/hero.md";

import Box from "@components/Box.svelte";
---

<div
  class="flex flex-col h-screen w-screen place-content-center px-5"
>
  <HeaderBar />
  <div class="flex max-w-3xl flex-col gap-5 place-self-center">
    <h1 class="max-w-2xl text-5xl text-fg-secondary dark:text-indigo-300">
      {frontmatter.title}
    </h1>
    <span class="text text-xl dark:text-white">
      <Content />
    </span>
    <div class="flex flex-row gap-4 text-lg">
      <a href="#editions">
        <Box client:idle class="flex flex-row gap-2 p-2">
          Pick or create an image <i class="i i-arrow-downward"></i>
        </Box>
      </a>
      <a href="/stats">
        <Box client:idle class="flex flex-row gap-2 p-2">
          See the stats <i class="i i-arrow-outward"></i>
        </Box>
      </a>
      <a href="https://ublue.it/">
        <Box client:idle class="flex flex-row gap-2 p-2">
          Read the docs <i class="i i-arrow-outward"></i>
        </Box>
      </a>
    </div>
  </div>
</div>

<!-- Style has to be global to affect the links inside the content component -->
<style is:global>
  .text a {
    @apply text-fg-secondary hover:underline;
  }
  .text em {
    @apply font-medium;
  }

  .i {
    width: 18px;
    object-fit: fill;
    background-size: contain;
    background-repeat: no-repeat;
  }

  .i-arrow-downward {
    background-image: url('data:image/svg+xml,%3Csvg xmlns="http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg" width="24" height="24" viewBox="0 0 24 24"%3E%3Cpath fill="currentColor" d="m12 20l-8-8l1.4-1.425l5.6 5.6V4h2v12.175l5.6-5.6L20 12l-8 8Z"%2F%3E%3C%2Fsvg%3E');
  }

  .i-arrow-outward {
    background-image: url('data:image/svg+xml,%3Csvg xmlns="http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg" width="24" height="24" viewBox="0 0 24 24"%3E%3Cpath fill="currentColor" d="M6.4 18L5 16.6L14.6 7H6V5h12v12h-2V8.4L6.4 18Z"%2F%3E%3C%2Fsvg%3E');
  }
</style>
